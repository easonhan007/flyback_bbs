= partial :breadcrumb		

.row
	=partial 'articles/article'

	=form_for(@comment, url(:comments, :update), method: 'put') do |f|
		=f.error_messages(class: 'alert alert-danger')
		=f.hidden_field :id
		.form-group
			span class='text-danger' *
			=f.label :content
			=f.text_area :content, class: 'form-control', rows: '10', placeholder:'required'
		.form-group
			=f.submit 'Submit', class: 'btn btn-primary'
